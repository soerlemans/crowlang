#ifndef SYMBOL_NODE_FRAME_HPP
#define SYMBOL_NODE_FRAME_HPP

// Absolute Includes:
#include "crow/ast/node/include.hpp"
#include "crow/symbol_table/symbol_table.hpp"

namespace symbol_table::symbol_node_frame {
// Using Declarations:
using ast::node::NodePtr;

/*!
 * Different specializiations of @ref SymbolTable are usually, constructed.
 * From the AST, this is a frame/view which maps the @ref SymbolTree.
 * To accompanying AST nodes.
 */
using NodeFrame = SymbolTable<NodePtr>;
using NodeFramePtr = SymbolTablePtr<NodePtr>;
} // namespace symbol_table::symbol_node_frame

#endif // SYMBOL_NODE_FRAME_HPP
